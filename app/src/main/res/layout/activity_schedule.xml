<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/facultyback"

    android:orientation="vertical"
    tools:context=".schedule">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/todoro_icon"
        android:src="@drawable/faculty" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:src="@drawable/line" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/addsubject_background"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/app_icon"
                android:src="@drawable/b" />

            <TextView
                android:id="@+id/txt_mohadrat"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"

                android:layout_marginBottom="15dp"
                android:background="@drawable/txthome"
                android:fontFamily="@font/handlee"
                android:gravity="center"
                android:text="Lectures"
                android:textColor="#005EFF"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_icon"
                android:src="@drawable/b" />

            <TextView
                android:id="@+id/training"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/txthome"
                android:fontFamily="@font/handlee"
                android:gravity="center"
                android:text="Training"
                android:textColor="#005EFF"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_icon"
                android:src="@drawable/b" />

            <TextView
                android:id="@+id/news"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/txthome"
                android:fontFamily="@font/handlee"
                android:gravity="center"
                android:text="News"
                android:textColor="#005EFF"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_icon"
                android:src="@drawable/b" />

            <TextView
                android:id="@+id/rules"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/txthome"
                android:fontFamily="@font/handlee"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Laws"
                android:textColor="#005EFF"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:src="@drawable/line" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/addsubject_background"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_bckschudle"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:fontFamily="@font/handlee"
            android:gravity="center"
            android:text="Back"

            android:textColor="#000000"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/ums"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:src="@drawable/ums" />

    </LinearLayout>


    \
</LinearLayout>


