<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBFFFFFF"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".startactivity">

    <LinearLayout

        android:layout_width="360dp"
        android:layout_height="83dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <Switch
            android:id="@+id/s_btn"
            android:layout_width="45dp"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/txt_name"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:hint="Subject "
            android:paddingTop="30dp"
            android:textColor="#000000"
            android:textColorHint="#F2888787"
            android:textSize="23sp" />

        <ImageView

            android:id="@+id/img_sbmenu"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/submenu" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/handlee"
        android:gravity="center"
        android:text="add"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/edt_addsbjct"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:background="@drawable/addsubject_background"
            android:fontFamily="@font/handlee"
            android:hint="Add Note"
            android:inputType="text"
            android:onClick="additem"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#000000"
            android:textColorHint="#F2888787"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/img_addsbjct"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_gravity="center"

            android:layout_marginLeft="5dp"
            android:background="@drawable/img_addsbjct"
            android:padding="2dp"
            android:src="@drawable/add" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/transitioncontanier"
        android:layout_width="330dp"
        android:layout_height="420dp"
        android:layout_gravity="center"

        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="22dp">


        <TextView
            android:id="@+id/sb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:background="@drawable/back"
            android:fontFamily="@font/handlee"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="#000000"
            android:textSize="27sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lstvw_sbjct"
            android:layout_width="match_parent"
            android:layout_height="335dp"


            android:background="@drawable/addsubject_background"

            android:visibility="gone" />


        <TextView
            android:id="@+id/txt_no"

            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"

            android:fontFamily="@font/handlee"
            android:gravity="center"
            android:text="No Available Notes"
            android:textColor="#F2616060"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_bckstrt"
            android:layout_width="55dp"

            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"


            android:background="@drawable/back"
            android:fontFamily="@font/handlee"
            android:gravity="center"
            android:text="Back"
            android:textColor="#000000"
            android:textSize="17dp" />


        <Button
            android:id="@+id/btn_show"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/handlee"
            android:gravity="center"
            android:text="Show All"
            android:textColor="#000000"
            android:textSize="11dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_tps"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:src="@drawable/lamb" />

    </LinearLayout>

</LinearLayout>












