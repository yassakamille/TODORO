<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00A544"
    android:orientation="vertical"

    tools:context=".Regisration_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"

        android:gravity="center">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/takebreak" />
    </LinearLayout>


    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"

        android:layout_centerInParent="true"
        android:background="@drawable/design"
        android:columnCount="3"
        android:rowCount="3">


        <ImageView
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:onClick="drop"

            android:tag="0"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:onClick="drop"

            android:tag="1" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:onClick="drop"

            android:tag="2" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:onClick="drop"

            android:tag="3" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:onClick="drop"

            android:tag="4" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:onClick="drop"

            android:tag="5" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:onClick="drop"

            android:tag="6" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:onClick="drop"

            android:tag="7" />

        <ImageView
            android:id="@+id/img9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:onClick="drop"

            android:tag="8" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/winner"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/winnnerbackground"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txwinners"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/handlee"
            android:gravity="center"
            android:text="Draw"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_plyagn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:height="50dp"
            android:gravity="center"
            android:onClick="play"
            android:text="Play Again"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="OnClick" />


    </LinearLayout>


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="630dp"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtbckrgstr"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="300dp"
            android:background="@drawable/back"
            android:fontFamily="@font/handlee"
            android:gravity="center"

            android:text="Back"
            android:textColor="#000000"
            android:textSize="17dp" />
    </LinearLayout>
</RelativeLayout>
