<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
android:background="#CBFFFFFF"
    android:orientation="vertical"
android:id="@+id/start"
    tools:context=".startactivity">




    <LinearLayout

        android:layout_width="360dp"
        android:layout_height="165dp"
       android:layout_marginTop="5dp"
android:padding="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

       <Switch
           android:id="@+id/s_btn"
           android:layout_width="45dp"
           android:layout_height="40dp"
        />

        <ImageView
           android:id="@+id/img_appicon"

            android:layout_width="255dp"
            android:layout_height="150dp"

            android:layout_gravity="center"
            android:contentDescription="@string/todoro_icon"
            android:src="@drawable/word" />
<ImageView


            android:id="@+id/img_sbmenu"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/submenu" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
      android:paddingRight="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:onClick="additem"
            android:id="@+id/edt_addsbjct"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:background="@drawable/addsubject_background"
            android:fontFamily="@font/handlee"
            android:hint="@string/add_subject"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#000000"
            android:textColorHint="#F2888787"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/img_addsbjct"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_gravity="center"

            android:padding="2dp"
android:layout_marginLeft="5dp"
            android:background="@drawable/img_addsbjct"
            android:src="@drawable/add"
           />

    </LinearLayout>
<LinearLayout
android:layout_marginTop="10dp"
    android:layout_width="330dp"
    android:layout_height="420dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    android:id="@+id/transitioncontanier"
    android:gravity="center_vertical">


    <ListView
android:background="@drawable/note"
        android:visibility="gone"
        android:id="@+id/lstvw_sbjct"
        android:layout_width="match_parent"
        android:layout_height="330dp"
android:layout_marginTop="20dp"
android:scrollbarSize="5dp"
        />

    <TextView
        android:id="@+id/txt_no"

        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:gravity="center"
android:layout_marginBottom="50dp"
        android:fontFamily="@font/handlee"
        android:text="@string/no_available_subjects"
        android:textColor="#F2616060"
        android:textSize="20dp"

        />
</LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"


        android:orientation="horizontal">



        <TextView
            android:id="@+id/txt_bckstrt"

            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/back"
            android:gravity="center"
            android:fontFamily="@font/handlee"
            android:text="Back"
            android:textColor="#000000"
            android:textSize="17dp" />
        <ImageView
            android:id="@+id/img_tps"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:src="@drawable/lamb"
            android:paddingLeft="180dp" />


    </LinearLayout>
</LinearLayout>












